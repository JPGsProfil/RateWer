<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartActivity"
    android:background="@color/background_floating_material_dark">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/primary"
            android:id="@+id/llHeader"
            >


            <FrameLayout
                style="@style/GreenBarTop">

            </FrameLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Statistiken"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textStyle="bold|italic"
                android:textColor="@color/textcolorbright"
                android:layout_marginBottom="30dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundbright"
            android:paddingLeft="40dp"
            android:paddingTop="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:id="@+id/tv_statistic_Name"
                android:layout_alignBottom="@+id/tv_statistic_LegendName"
                android:layout_alignParentEnd="true"
                android:textColor="@color/primarydark"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/statistic_activity_LegendWon"
                    android:id="@+id/tv_statistic_LegendWon"
                    android:layout_below="@+id/tv_statistic_LegendName"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0.8"
                    android:textColor="@color/primarydark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medium Text"
                    android:id="@+id/tv_statistic_Won"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:textColor="#7ca300"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/statistic_activity_LegendLost"
                    android:id="@+id/tv_statistic_LegendLost"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0.8"
                    android:textColor="@color/primarydark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Medium Text"
                    android:id="@+id/tv_statistic_Lost"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:textColor="@color/accentnegativ"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primarydark"></FrameLayout>


    </LinearLayout>

</RelativeLayout>