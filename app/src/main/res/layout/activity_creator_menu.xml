<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backgroundbright">

    <FrameLayout
        style="@style/GreenBarTop"
        android:id="@+id/aeg_gbt"
        >

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:id="@+id/LL1">

        <TextView
            android:text="Set Editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_eg_msg"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textColor="@color/textcolorbright"
            android:padding="40dip"
            android:background="@color/primary"
            />
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/LL1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:background="@color/primary"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/LL1"
        android:stretchColumns="1"
        android:padding="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:nestedScrollingEnabled="true">

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meine Sets"
                android:textSize="24dp"
                android:layout_marginBottom="4dp">
            </TextView>
        </TableRow>
        <View
            android:layout_height="1dp"
            android:background="@color/textcolorbright" />
        <TableRow
            android:id="@+id/tableRow23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Name"
                android:textSize="24dp" >
            </TextView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Status"
                android:textSize="24dp" >
            </TextView>

        </TableRow>
        <View
            android:layout_height="4dp"
            android:background="@color/textcolorbright" />

        <TableRow
            android:id="@+id/tableRow5"
            android:clickable="false">

            <TextView

                android:id="@+id/textView4"
                android:background="#00022FFF"

                android:text="Tier Set 1"
                android:textSize="18dp"
                android:padding="3dip">
            </TextView>
            <TextView
                android:id="@+id/textView2"
                android:gravity="right"
                android:text="Online"
                android:padding="3dip"
                android:textSize="18dp" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dp"
            android:background="@color/textcolorbright" />

        <TableRow
            android:id="@+id/tableRow6">

            <TextView
                android:id="@+id/textView5"

                android:text="Sport"
                android:textSize="18dp"
                android:padding="3dip">
            </TextView>
            <TextView
                android:id="@+id/textView3"
                android:gravity="right"
                android:text="Offline"
                android:padding="3dip"
                android:textSize="18dp" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dp"
            android:background="@color/textcolorbright" />

        <TableRow
            android:id="@+id/tableRow7">

            <TextView

                android:id="@+id/textView7"
                android:background="#00022FFF"

                android:text="Simpson"
                android:textSize="18dp"
                android:padding="3dip">
            </TextView>
            <TextView
                android:id="@+id/textView6"
                android:gravity="right"
                android:text="Online"
                android:padding="3dip"
                android:textSize="18dp" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dp"
            android:background="@color/textcolorbright" />

        <TableRow
            android:id="@+id/tableRow8">

            <TextView

                android:id="@+id/textView8"
                android:background="#00022FFF"

                android:text=""
                android:textSize="18dp"
                android:padding="3dip">
            </TextView>
            <TextView
                android:id="@+id/textView10"
                android:gravity="right"
                android:text=""
                android:padding="3dip"
                android:textSize="18dp" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dp"
            android:background="@color/textcolorbright" />

        <TableRow
            android:id="@+id/tableRow9">

            <TextView

                android:background="#00022FFF"

                android:text=""
                android:textSize="18dp"
                android:padding="3dip">
            </TextView>
            <TextView
                android:gravity="right"
                android:text=""
                android:padding="3dip"
                android:textSize="18dp" >
            </TextView>
        </TableRow>

        <View
            android:layout_height="2dp"
            android:background="@color/textcolorbright" />

        <TableRow
            android:id="@+id/tableRow10">

            <TextView

                android:background="#00022FFF"

                android:text=""
                android:textSize="18dp"
                android:padding="3dip">
            </TextView>
            <TextView
                android:gravity="right"
                android:text=""
                android:padding="3dip"
                android:textSize="18dp" >
            </TextView>
        </TableRow>

    </TableLayout>
    <Button
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neu"
        android:id="@+id/bNewSet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp" />
</LinearLayout>

</ScrollView>

