<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wlg.ratewer.Activities.StartNewGameActivity"
    android:background="@color/backgroundbright">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:id="@+id/LL1">


        <TextView
            android:text="Neues Karte anlegen"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView"
            style="@style/NormalHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/textcolorbright"
            android:background="@color/primary"
            android:padding="40dip"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            />
    </LinearLayout>

   <Button
        android:background="@color/primary"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abbruch"
        android:id="@+id/bCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
       android:layout_marginLeft="5dp"
       android:layout_marginBottom="5dp"
       android:padding="10dp" />

    <Button
        android:background="@color/primary"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertig"
        android:id="@+id/bDoneCard"
        android:layout_alignTop="@+id/bCancel"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp" />

    <Button
        android:background="@color/primary"

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ¤chste Karte"
        android:id="@+id/bNextNewCard"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL1"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <ImageButton
                android:layout_below="@+id/LL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iBNewCard"
                android:background="@drawable/si_manjula"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:text="Kartenname:"
                android:textColor="@color/primary"
                android:ems="10"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:ems="10"
                android:textColor="#7ca300"

                android:id="@+id/editText2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Hautfarbe:"
                android:id="@+id/textView17"
                android:layout_width="147dp"
                android:layout_height="62dp"
                android:textColor="@color/primary"
                android:ems="10"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eAttribute1"
                android:text="Hautfarbe"
                android:textColor="#7ca300"
                android:layout_below="@+id/editText2"
                android:layout_alignEnd="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Augenfarbe:"
                android:id="@+id/textView19"
                android:layout_width="147dp"
                android:layout_height="62dp"
                android:textColor="@color/primary"
                android:ems="10"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eAttribute3"
                android:textColor="#7ca300"
                android:text="Augenfarbe" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Job:"
                android:id="@+id/textView20"
                android:layout_width="147dp"
                android:layout_height="62dp"
                android:textColor="@color/primary"
                android:ems="10"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eAttribute4"
                android:textColor="#7ca300"
                android:text="Hausfrau" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>