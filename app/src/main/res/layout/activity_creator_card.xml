<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wlg.ratewer.Activities.StartNewGameActivity"
    android:background="@color/backgroundbright">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:id="@+id/LL1">


        <Button
            android:background="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:textSize="60sp"
            android:id="@+id/bBack"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Neues Karte anlegen"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView"
            style="@style/NormalHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/textcolorbright"
            android:background="@color/primary"
            android:padding="40dip"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            />
    </LinearLayout>


    <ImageButton
        android:layout_below="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iBNewCard"
        android:background="@drawable/si_manjula"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="31dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:textColor="#7ca300"

        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@color/primary"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abbruch"
        android:id="@+id/bCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/eAttribute3" />

    <Button
        android:background="@color/primary"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertig"
        android:id="@+id/bDoneCard"
        android:layout_alignTop="@+id/bCancel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/eAttribute3" />

    <Button
        android:background="@color/primary"

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ¤chste Karte"
        android:id="@+id/bNextNewCard"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eAttribute1"
        android:text="Hautfarbe"
        android:layout_marginTop="48dp"
        android:textColor="#7ca300"
        android:layout_below="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7ca300"
        android:id="@+id/eAttribute2"
        android:text="Job"
        android:layout_below="@+id/eAttribute1"
        android:layout_alignEnd="@+id/eAttribute1"
        android:layout_alignStart="@+id/eAttribute1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eAttribute3"
        android:textColor="#7ca300"
        android:text="Augenfarbe"
        android:layout_below="@+id/eAttribute2"
        android:layout_alignStart="@+id/eAttribute2"
        android:layout_alignEnd="@+id/eAttribute2" />

</RelativeLayout>