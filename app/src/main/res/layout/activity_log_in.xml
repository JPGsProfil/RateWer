<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="@color/backgroundbright">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@color/primary"
    android:id="@+id/llHeader"
    >


    <FrameLayout
        style="@style/GreenBarTop"></FrameLayout>

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Is it...?"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="30px"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textColor="@color/textcolorbright"
        />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bitte loggen Sie sich mit Ihren Daten ein."
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10px"
        android:textColor="@color/textcolorbright"
        android:layout_marginBottom="30px"
        android:textSize="20dp" />

</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/llMenu"
    android:layout_below="@+id/llHeader">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:text="Username :"
            android:textColor="@color/primary"
            android:id="@+id/textView14"
            android:ems="10"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/loginName"
            android:textColor="@color/primary"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
<!-- TODO: set the text string dynamicly for multilingual app-->
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Passwort :"
            android:textColor="@color/primary"
            android:id="@+id/textPasswordLogIn"
            android:ems="10"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_weight="0.60"
            android:paddingLeft="10dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:text="*****"
            android:textColor="@color/primary"
            android:id="@+id/loginPassword" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/bLogin"
        android:background="@color/primary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textcolorbright"
        android:layout_margin="10sp"
        android:padding="10dp"
        style="@style/StandartFont"/>


</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrieren"
            android:id="@+id/bRegister"
            android:background="@color/primary"
            android:textColor="@color/textcolorbright"
            android:padding="10dp"
            style="@style/StandartFont"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/bjumpToStart"
            android:layout_marginStart="173dp"
            android:layout_weight="0.67" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ãœberspringen"
            android:id="@+id/bjumpToStart"
            android:background="@color/primary"
            android:textColor="@color/textcolorbright"
            android:padding="10dp"
            style="@style/StandartFont"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.36" />
    </LinearLayout>


</RelativeLayout>
