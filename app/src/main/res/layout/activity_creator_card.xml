<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wlg.ratewer.Activities.StartNewGameActivity"
    android:background="@color/backgroundbright">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        style="@style/GreenBarTop"
        android:id="@+id/aeg_gbt"
        ></FrameLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL1"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:id="@+id/LL1">


                    <TextView
                        android:text="Neues Karte anlegen"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/textView"
                        style="@style/NormalHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/textcolorbright"
                        android:background="@color/primary"
                        android:padding="40dip"
                        android:layout_centerHorizontal="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold|italic"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageButton
                        android:scaleType="fitCenter"
                        android:padding="3dip"
                        android:adjustViewBounds="true"
                        android:layout_below="@+id/LL1"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:id="@+id/iImage"
                        android:background="@drawable/si_manjula"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_marginTop="31dp"
                        android:layout_marginBottom="31dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="147dp"
                        android:layout_height="match_parent"
                        android:text="Kartenname:"
                        android:textColor="@color/primary"
                        android:ems="10"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:ems="10"
                        android:textColor="#7ca300"

                        android:id="@+id/eCardName"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Hautfarbe:"
                        android:id="@+id/tAttr1"
                        android:layout_width="147dp"
                        android:layout_height="62dp"
                        android:textColor="@color/primary"
                        android:ems="10"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/eAttribute1"
                        android:text="Hautfarbe"
                        android:textColor="#7ca300"
                        android:layout_below="@+id/editText2"
                        android:layout_alignEnd="@+id/editText2"
                        android:layout_alignStart="@+id/editText2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Augenfarbe:"
                        android:id="@+id/tAttr2"
                        android:layout_width="147dp"
                        android:layout_height="62dp"
                        android:textColor="@color/primary"
                        android:ems="10"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/eAttribute2"
                        android:textColor="#7ca300"
                        android:text="Augenfarbe" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Job:"
                        android:id="@+id/tAttr3"
                        android:layout_width="147dp"
                        android:layout_height="62dp"
                        android:textColor="@color/primary"
                        android:ems="10"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/eAttribute3"
                        android:textColor="#7ca300"
                        android:text="Hausfrau" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <Button
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Speichern"
            android:id="@+id/bDoneCard"
            android:layout_weight="0.33"/>

        <Button
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Löschen"
            android:id="@+id/bDelete"
            android:layout_weight="0.33"/>

        <Button
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nächste Karte"
            android:id="@+id/bNextNewCard"
            android:layout_weight="0.33"/>

    </LinearLayout>
</LinearLayout>
    </ScrollView>

</RelativeLayout>