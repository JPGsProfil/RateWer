<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backgroundbright">

    <FrameLayout
        style="@style/GreenBarTop"
        android:id="@+id/aeg_gbt"
        >

    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:id="@+id/LL1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Neues Set erstellen"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/textcolorbright"
            android:layout_alignParentTop="true"
            android:padding="30dip"
            android:background="@color/primary"
            />
    </LinearLayout>

    <Button
        android:background="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karte\nHinzufügen"
        android:id="@+id/bAddCard"
        android:layout_alignParentBottom="true" />

    <Button
        android:background="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Löschen"
        android:id="@+id/bDeleteSet"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/LL1" />

    <Button
        android:background="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:id="@+id/bSave"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="#7ca300"
        android:id="@+id/textView11"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/LL1"
        android:layout_alignParentStart="true" />
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eigenschaft 1: "
        android:textColor="#7ca300"
        android:id="@+id/textView12"
    android:layout_alignParentStart="true"
    android:layout_alignTop="@+id/eAttrib2"
    android:layout_above="@+id/textView13"
    android:layout_margin="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Eigenschaft"
        android:id="@+id/bAddAttribute"
        android:layout_below="@+id/eAttrib2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eAttr1"
        android:text="Hautfarbe"
        android:autoText="false"
        android:minWidth="20dip"
        android:textColor="#7ca300"
        android:layout_below="@+id/eAttrib2"
        android:layout_alignEnd="@+id/llHeader"
        android:layout_toEndOf="@+id/bSave" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eAttrib2"
        android:layout_alignStart="@+id/eAttr1"
        android:minWidth="20dip"
        android:text="Job"
        android:textColor="#7ca300"
        android:layout_toStartOf="@+id/textView11"
        android:layout_alignEnd="@+id/eSetName"
        android:layout_below="@+id/eSetName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eigenschaft 2: "
        android:textColor="#7ca300"
        android:id="@+id/textView13"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/eAttr1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eAttrib2"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eSetName"
        android:textColor="#7ca300"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/bSave"
        android:text="Test Set"
        android:layout_below="@+id/LL1"
     />


</RelativeLayout>